<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:textSize="35sp"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.35"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 造型室"
        android:textSize="13sp"
        android:textColor="#CCFFFFFF"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:letterSpacing="0.13"
        android:includeFontPadding="false"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/galleryView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        android:layout_marginBottom="30dp" />

    <com.bonnie.gallerylayout.GalleryView
        android:id="@+id/galleryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@+id/btnExplore"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnExplore"
        android:layout_width="109dp"
        android:layout_height="44dp"
        app:cardBackgroundColor="#ADF01D"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        android:alpha="0"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/galleryView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="探索一下"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            android:textStyle="bold"
            android:includeFontPadding="false"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
